{% comment %}
  Renders a subscription card with radio input, icon, and content

  Accepts:
  - id: {String} Unique identifier for the input (required)
  - name: {String} Name attribute for radio group (required)
  - value: {String} Value for the radio input (required)
  - title: {String} Display title (required)
  - icon_url: {String} URL for the icon image (optional)
  - content: {String} Additional content text (optional)
  - tag_text: {String} Tag text to display (optional)
  - card_class: {String} Additional CSS class for the card (optional)
  - data_attributes: {String} Additional data attributes (optional)

  Usage:
  {% render 'subscription-card',
     id: 'option_1',
     name: 'subscription_option',
     value: 'monthly',
     title: 'Monthly Subscription',
     icon_url: 'path/to/icon.png' %}
{% endcomment %}

<div class="subscriptionItem {{ card_class }}">
  <input
    type="radio"
    id="{{ id }}"
    name="{{ name }}"
    value="{{ value }}"
    {% if data_attributes %}
      {{- data_attributes -}}
    {% endif %}
  >
  <label for="{{ id }}" class="subscriptionItemLabel">
    {% if icon_url != blank %}
      <div class="subscriptionItemIcon">
        <img
          src="{{ icon_url | image_url }}"
          alt="{{ title }}"
          width="50"
          height="50"
          loading="lazy"
        >
      </div>
    {% endif %}

    <div class="subscriptionItemDetails">
      <h4 class="subscriptionItemTitle">{{ title }}</h4>
      {% if content != blank %}
        <p class="subscriptionItemContent">{{ content }}</p>
      {% endif %}
    </div>

    {% if tag_text != blank %}
      <div class="subscriptionItemTag">{{ tag_text }}</div>
    {% endif %}
  </label>
</div>
