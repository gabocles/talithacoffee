{%- if request.page_type == 'collection' -%}
{%- unless avada_seo_ovr_collection_ids contains collection.id -%}
{%- capture avada_seo_meta_title -%}{{ collection.title }}{%- endcapture -%}
{%- capture avada_seo_meta_description -%}Buy {{ collection.title }} at {{ shop.name }}. By purchasing Talitha you are contributing to supporting survivors of Human trafficking{%- endcapture -%}
{%- endunless -%}
{%- endif -%}
{%- if request.page_type == 'article' -%}
{%- unless avada_seo_ovr_article_ids contains article.id -%}
