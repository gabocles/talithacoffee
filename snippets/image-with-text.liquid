{% comment %}theme-check-disable MissingTemplate{% endcomment %}
{%- liquid
  assign image_position = image_position
  case image_size
    when 'third'
      assign text_width_desktop = 'lg:col-span-8'
      if image_position == 'right'
        assign image_width_desktop = 'lg:col-start-9 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-4'
      endif
    when 'half'
      assign text_width_desktop = 'lg:col-span-6'
      if image_position == 'right'
        assign image_width_desktop = 'lg:col-start-7 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-6'
      endif
    when 'three_fifths'
      assign text_width_desktop = 'lg:col-span-5'
      if image_position == 'right'
        assign image_width_desktop = 'lg:col-start-6 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-7'
      endif
    when 'two_thirds'
      assign text_width_desktop = 'lg:col-span-4'
      if image_position == 'right'
        assign image_width_desktop = 'lg:col-start-5 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-8'
      endif
  endcase
-%}

{%- render 'shape-defs',
  shape: image_shape,
  shape_id: section_id,
  index: index,
  blob_type: blob_type
-%}

<div class="px-section relative z-10 max-w-site mx-auto">
  <div class="{% if display_on_card %}card-container{% endif %}">
    <div class="{% if display_on_card %}card p-5 lg:p-10{% endif %} section-content mx-auto relative z-10 text_alignment inner-bg">
      <div class="grid grid-cols-1 lg:grid-cols-12 grid-flow-row-dense gap-10">
        <div class="{{ image_width_desktop }}">
          {%- if image != blank -%}
            {%- render 'media-image',
              media: image,
              shape_id: section_id,
              shape: image_shape,
              crop: crop,
              rotate: rotate_image,
              is_card: display_on_card,
              container_id: container_id,
              disable_media_style: disable_media_style
            -%}
          {%- else -%}
           {%- render 'media-image-placeholder', shape_id: section_id, container_id: section_id, shape: image_shape, crop: scrop, is_card: display_on_card, blob_type: blob_type -%}
          {%- endif -%}
        </div>
        <div class="flex items-center {{ text_width_desktop }}">
          <div class="{{ text_alignment }}">
            {% if title != '' %}
            <h2 class="font-heading  {{ heading_size }} heading-style {{ settings.heading_drop_shadow_style }}">{{ title }}</h2>
            {% endif %}

            <div class="rte mt-5 max-w-2xl {% if text_alignment contains 'center' %}mx-auto{% elsif text_alignment contains 'right' %}ml-auto{% endif %}">
              {{ richtext }}
            </div>

            {%- if button_label != blank -%}
              <div class="mt-5">
                <a href="{% if template contains 'product' and product.metafields.custom.brewingguide.value != blank %}{{ product.metafields.custom.brewingguide.value.url }}
                  {% else %}{{ button_link }}{% endif %}" 
                 class="inline-block" {% if template contains 'product' %}download{% endif %}>
                <span class="custom-btn">{{ button_label }}</span>
                </a>
              </div>
            {%- endif -%}

            {%- if scroll_button_text != blank -%}
              <div class="mt-5">
                <button onclick="document.getElementById('{{ scroll_target_id }}').scrollIntoView({ behavior: 'smooth', block: 'center' })" 
                        class="inline-block">
                  <span class="custom-btn">{{ scroll_button_text }}</span>
                </button>
              </div>
            {%- endif -%}

            {%- if section.settings.show_additional_section -%}
              <div class="mt-8 {{ section.settings.additional_section_alignment }} color-scheme-{{ section.settings.additional_section_color_scheme }}">
                {%- if section.settings.additional_section_type == 'button' -%}
                  {%- if section.settings.additional_button_label != blank -%}
                    <div class="additional-button-container">
                      <a href="{{ section.settings.additional_button_link }}" class="inline-block">
                        <span class="custom-btn secondary-btn">{{ section.settings.additional_button_label }}</span>
                      </a>
                    </div>
                  {%- endif -%}
                {%- elsif section.settings.additional_section_type == 'banner' -%}
                  {%- if section.settings.banner_text != blank -%}
                    <div class="mini-banner p-4 rounded-lg bg-scheme-accent-1 text-scheme-accent-1-overlay">
                      <p class="text-sm font-medium mb-0">{{ section.settings.banner_text }}</p>
                    </div>
                  {%- endif -%}
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
    {% if section.settings.display_on_card and settings.card_show_border_on_shadow %}<div class="card-border"></div>{% endif %}
  </div>
</div>


