  .sidebar-button {
    width: 100%;
    display: inline-block;
    margin-top: 5px;
    padding: 8px 15px;
    text-decoration: none;
    font-family: Termina;
    font-weight: bold;
    font-size: 20px;
    text-align: center;
  }
{% endstyle %}
