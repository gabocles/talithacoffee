<link rel="stylesheet" href="{{ 'adev-customer-global.min.css' | asset_url }}" media="all">
<link rel="stylesheet" href="{{ 'adev-new-order.min.css' | asset_url }}" media="all">

{%- assign get = section.settings -%}
{% style %}
    .adev-account-order#section_{{ section.id }} {
        padding-top: {{ get.spacing_top_mobile }}px;
        padding-bottom: {{ get.spacing_bottom_mobile }}px;
    }
    @media (min-width:992px) {
        .adev-account-order#section_{{ section.id }} {
            padding-top: {{ get.spacing_top_desktop }}px;
            padding-bottom: {{ get.spacing_bottom_desktop }}px;
        }
    }
{% endstyle %}

<div class="adev-account adev-account-order adev-customer-logged" id="section_{{ section.id }}">
    <div class="adev-cl__inner">

        <div class="adev-cl__header">
          <h1>{{ order.name }}</h1>
          <a class="adev-btn adev-btn--white adev-cl__go-back" href="javascript:void(0);" onclick="history.back();">Go Back</a>
        </div>

        <div class="adev-cl__main">

            <div class="adev-cl__contents">

                <div class="adev-cl__order-card">

                    <div class="adev-cl__order-header">

                        <div class="adev-cl__order-stats">

                            <div class="adev-cl__order-stat">
                                <span>Order Placed</span>
                                {%- assign order_date = order.created_at | time_tag: format: "date" -%}
                                <p>{{ order_date }}</p>
                            </div>

                            <div class="adev-cl__order-stat">
                                <span>Total</span>
                                <p>{{ order.total_price | money }}</p>
                            </div>

                        </div>

                        <div class="adev-cl__order-contact hide-if-below-769">
                            <p>Got an enquiry about this order?</p>
                            <a href="mailto:{{ section.settings.contact_email }}" class="adev-btn adev-btn--green">Email Us</a>
                        </div>
                        
                    </div>

                    <div class="adev-cl__order-main">

                        <div class="adev-cl__order-items">
                            {% for line_item in order.line_items %}
                                {%- assign product = line_item.product -%}

                                {%- assign image_url = line_item.product.images[0] -%}
                                {% if line_item.variant.image.src %}
                                    {%- assign image_url = line_item.variant.image -%}
                                {% endif %}

                                <div class="adev-cl__order-item">

                                    <div class="adev-cl__order-image">
                                        <div class="adev-aspect-ratio" style="padding-top:{{ 1 | divided_by: image_url.aspect_ratio | times: 100 }}%"> 
                                            <img loading="lazy" draggable="false" src="{{ image_url | img_url:'200x' }}" alt="{{ image_url.alt | escape }}">
                                        </div>
                                    </div>

                                    <div class="adev-cl__order-infos">

                                        <div class="adev-cl__order-title">
                                            <a href="{{ product.url }}">{{ product.title }}{% unless product.has_only_default_variant %} - {{ line_item.variant.title }}{% endunless %}</a>
                                            {%- if line_item.selling_plan_allocation -%}
                                                <div class="adev-cl__order-selling-plan">
                                                {{- line_item.selling_plan_allocation.selling_plan.name -}}
                                                </div>
                                            {%- endif -%}
                                        </div>

                                        <div class="adev-cl__order-details">
                                                <div class="adev-cl__order-variant">{{ line_item.sku }}</div>
                                            <div class="adev-cl__order-qty">Qty - {{ line_item.quantity }}</div>
                                        </div>

                                    </div>

                                    <div class="adev-cl__order-action">
                                        <a href="{{ line_item.variant.url }}" class="adev-btn" target="_blank">Buy Again</a>
                                    </div>

                                </div>

                            {% endfor %}
                        </div>

                        <div class="adev-cl__order-contact-mobile hide-if-above-768">
                            <p>Got an enquiry about this order?</p>
                            <a href="mailto:{{ section.settings.contact_email }}" class="adev-btn adev-btn--green">Email Us</a>
                        </div>

                    </div>

                </div>


                <div class="adev-cl__address-card">
                    <div class="adev-cl__address-title">Address & Billing</div>
                    <div class="adev-cl__address-main">

                        <div class="adev-cl__address-inner adev-cl__order-addresses">
                            
                            <div class="adev-cl__order-address">
                                <h5>{{ 'customer.order.billing_address' | t }}</h5>
                                <p>{{ 'customer.order.payment_status' | t }}: {{ order.financial_status_label }}</p>
                                <address>
                                  {{ order.billing_address | format_address }}
                                </address>
                            </div>
                            
                            <div class="adev-cl__order-address">
                                <h5>{{ 'customer.order.shipping_address' | t }}</h5>
                                <p>{{ 'customer.order.fulfillment_status' | t }}: {{ order.fulfillment_status_label }}</p>
                                <address>{{ order.shipping_address | format_address }}</address>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

            <div class="adev-cl__sidebar">

                <nav class="adev-cl__nav">
                    {%- render 'adev-account-nav' -%}
                </nav>

            </div>

        </div>

    </div>
</div>



{% comment %}
  The data-label attributes on <td> elements are mobile-friendly
  helpers used for responsive-table labels
{% endcomment %}

{%- comment -%}
<div class="section-content py-section-vertical-spacing px-section max-w-site" data-color-scheme="primary">
    <a class="inline-block text-sm mb-10" href="{{ routes.account_url }}">&larr; {{ 'customer.account.return' | t }}</a>
    <h1 class="font-heading heading-feature mb-5">{{ 'customer.account.title' | t }}</h1>
  
    <h2 class="font-heading heading-secondary mb-2.5">{{ 'customer.order.title' | t: name: order.name }}</h2>
    <p class="text-sm">{{ 'customer.order.date_html' | t: date: order.created_at | date: "%B %d, %Y %I:%M%p" }}</p>
  
    {% if order.cancelled %}
      {%- assign cancelled_at = order.cancelled_at | date: "%B %d, %Y %I:%M%p" -%}
      <p>{{ 'customer.order.cancelled_html' | t: date: cancelled_at }}</p>
      <p>{{ 'customer.order.cancelled_reason' | t: reason: order.cancel_reason }}</p>
    {% endif %}
  
    <table class="mt-4 responsive-table text-sm">
      <thead>
        <tr>
          <th scope="col">{{ 'customer.order.product' | t }}</th>
          <th scope="col">{{ 'customer.order.sku' | t }}</th>
          <th scope="col">{{ 'customer.order.price' | t }}</th>
          <th scope="col">{{ 'customer.order.quantity' | t }}</th>
          <th scope="col">{{ 'customer.order.total' | t }}</th>
        </tr>
      </thead>
      <tbody>
        {% for line_item in order.line_items %}
          <tr id="{{ line_item.key }}" class="responsive-table-row  border-t-grid border-grid-color lg:border-none">
            <td data-label="{{ 'customer.order.product' | t }}">
              <div class="space-y-3">
                <span class="text-primary-accent-1">{{ line_item.title | link_to: line_item.product.url }}</span>
  
                {%- if line_item.selling_plan_allocation -%}
                  <div class="text-sm mt-1">
                    {{- line_item.selling_plan_allocation.selling_plan.name -}}
                  </div>
                {%- endif -%}
  
                {% assign property_size = line_item.properties | size %}
                {% if property_size > 0 %}
                  {% for p in line_item.properties %}
                    {% assign first_character_in_key = p.first | slice: 0 %}
                    {% unless p.last == blank or first_character_in_key == '_' %}
                      <div class="text-sm mt01">
                        {{- p.first -}}:
  
                        {% if p.last contains '/uploads/' -%}
                          <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                        {%- else -%}
                          {{- p.last -}}
                        {%- endif -%}
                      </div>
                    {% endunless %}
                  {% endfor %}
                {% endif %}
  
                {%- if line_item.line_level_discount_allocations != blank -%}
                  <ul class="text-sm lg:text-base mt-1 text-primary-accent-1 mb2"
                      aria-label="{{ 'customer.order.discount' | t }}">
                    {%- for discount_allocation in line_item.line_level_discount_allocations -%}
                      <li class="order-discount__item">
                        {{ discount_allocation.discount_application.title }} (-{{ discount_allocation.amount | money }})
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
  
                {%- if line_item.fulfillment -%}
                  <div class="fulfillment text-xs mt-2 space-y-1">
                    {%- assign created_at = line_item.fulfillment.created_at | time_tag: format: 'date' -%}
                    <span class="block">{{ 'customer.order.fulfilled_at' | t }} {{ created_at }}</span>
  
                      {%- if line_item.fulfillment.tracking_url -%}
                        <a class="block underline" href="{{ line_item.fulfillment.tracking_url }}">
                          {{ 'customer.order.track_shipment' | t }}
                        </a>
                      {%- endif -%}
                      <span class="block">
                        {{ line_item.fulfillment.tracking_company }}
                        {%- if line_item.fulfillment.tracking_number -%} #{{ line_item.fulfillment.tracking_number }} {%- endif -%}
                      </span>
                  </div>
                {%- endif -%}
              </div>
            </td>
            <td data-label="{{ 'customer.order.sku' | t }}">{{ line_item.sku }}</td>
            <td data-label="{{ 'customer.order.price' | t }}">
              <div>
                {%- if line_item.original_price != line_item.final_price -%}
                  <del class="cart__price block ">{{ line_item.original_price | money }}</del>
                  <span class="order-discount cart__price text-primary-accent-1 line-height--1 block mb2">{{ line_item.final_price | money }}</span>
                {%- else -%}
                  <span>{{ line_item.original_price | money }}</span>
                {%- endif -%}
                {%- if line_item.unit_price_measurement -%}
                  <div class="text-sm mt-1 {% if line_item.original_price != line_item.final_price %} text-primary-accent{% endif %}">
                    <span class="visually-hidden">
                      {{ 'products.product.unit_price_label' | t }}
                    </span>
                    {{ line_item.unit_price | money }}
                    <span aria-hidden="true">/&nbsp;</span><span class="visually-hidden">{{ 'general.accessibility.unit_price_separator' | t }}&nbsp;</span>
                    {%- if line_item.unit_price_measurement.reference_value != 1 -%}
                      {{- line_item.unit_price_measurement.reference_value -}}
                    {%- endif -%}
                    {{ line_item.unit_price_measurement.reference_unit }}
                  </div>
                {%- endif -%}
              </div>
            </td>
            <td data-label="{{ 'customer.order.quantity' | t }}">{{ line_item.quantity }}</td>
            <td data-label="{{ 'customer.order.total' | t }}">
              <div>
                {%- if line_item.original_line_price != line_item.final_line_price -%}
                  <del class="cart__price block ">{{ line_item.original_line_price | money }}</del>
                  <span class="order-discount cart__price text-primary-accent-1 line-height--1 block mb2">{{ line_item.final_line_price | money }}</span>
                {%- else -%}
                  <span>{{ line_item.original_line_price | money }}</span>
                {%- endif -%}
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
      <tfoot>
        <tr class="responsive-table-row border-t-grid border-grid-color lg:border-none">
          <td colspan="4" class="table-small-hide">{{ 'customer.order.subtotal' | t }}</td>
          <td data-label="{{ 'customer.order.subtotal' | t }}">{{ order.line_items_subtotal_price | money }}</td>
        </tr>
  
        {%- if order.cart_level_discount_applications != blank -%}
        {% for discount_application in order.cart_level_discount_applications %}
          <tr>
            <td colspan="4" class="table-small-hide">{{ 'customer.order.discount' | t }}&nbsp;&mdash;&nbsp;<span class="text-primary-accent-1">{{- discount_application.title -}}</span></td>
            </td>
            <td class="text-right text-primary-accent-1 align--bottom" data-label="{{ 'customer.order.discount' | t }}">
              <span><span class="text-sm text-primary-accent-1 lg:hidden">{{- discount_application.title -}}</span> -{{ discount_application.total_allocated_amount | money }}</span>
            </td>
          </tr>
        {% endfor %}
        {%- endif -%}
  
        {% for shipping_method in order.shipping_methods %}
          <tr>
            <td colspan="4" class="table-small-hide">{{ 'customer.order.shipping' | t }} ({{ shipping_method.title }})</td>
            <td data-label="{{ 'customer.order.shipping' | t }} ({{ shipping_method.title }})">{{ shipping_method.price | money }}</td>
          </tr>
        {% endfor %}
  
        {% for tax_line in order.tax_lines %}
          <tr>
            <td colspan="4" class="table-small-hide">{{ 'customer.order.tax' | t }} ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%)</td>
            <td data-label="{{ 'customer.order.tax' | t }} ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%)">{{ tax_line.price | money }}</td>
          </tr>
        {% endfor %}
  
        <tr class="font-bold">
          <td colspan="4" class="table-small-hide">{{ 'customer.order.total' | t }}</td>
          <td data-label="{{ 'customer.order.total' | t }}">{{ order.total_price | money }}&nbsp;{{ order.currency }}</td>
        </tr>
  
        {% if order.financial_status == 'refunded' or order.financial_status == 'partially_refunded' %}
        <tr>
          <td colspan="4" class="table-small-hide pt1">{{ 'customer.order.refund_amount' | t }}</td>
          <td class="text-right pt1" data-label="{{ 'customer.order.refund_amount' | t }}">{{ order.total_refunded_amount | money }} {{ order.currency }}</td>
        </tr>
        {% endif %}
  
      </tfoot>
    </table>
  
    <div class="lg:grid lg:grid-cols-2">
      <div class="mt-10">
        <h5 class="font-heading blog-heading mb-2.5">{{ 'customer.order.billing_address' | t }}</h5>
  
        <p>{{ 'customer.order.payment_status' | t }}: {{ order.financial_status_label }}</p>
  
        {{ order.billing_address | format_address }}
      </div>
      <div class="mt-10">
        <h5 class="font-heading blog-heading mb-2.5">{{ 'customer.order.shipping_address' | t }}</h5>
  
        <p>{{ 'customer.order.fulfillment_status' | t }}: {{ order.fulfillment_status_label }}</p>
  
        {{ order.shipping_address | format_address }}
      </div>
    </div>
  </div>
  {%- endcomment -%}

{% schema %}
{
  "name": "New Order",
  "settings": [
    {
        "type": "header",
        "content": "Contact Email"
    },
    {
        "type": "text",
        "id": "contact_email",
        "label": "Contact Email",
        "default": "example@example.com"
    },
    {
        "type": "header",
        "content": "Spacing"
    },
    {
        "type": "range",
        "id": "spacing_top_desktop",
        "label": "Spacing Top (Desktop)",
        "unit": "px",
        "min": 0,
        "max": 300,
        "step": 5,
        "default": 60
    },
    {
        "type": "range",
        "id": "spacing_bottom_desktop",
        "label": "Spacing Bottom (Desktop)",
        "unit": "px",
        "min": 0,
        "max": 300,
        "step": 5,
        "default": 60
    },
    {
        "type": "range",
        "id": "spacing_top_mobile",
        "label": "Spacing Top (Mobile)",
        "unit": "px",
        "min": 0,
        "max": 300,
        "step": 5,
        "default": 35
    },
    {
        "type": "range",
        "id": "spacing_bottom_mobile",
        "label": "Spacing Bottom (Mobile)",
        "unit": "px",
        "min": 0,
        "max": 300,
        "step": 5,
        "default": 35
    }
  ]
}
{% endschema %}