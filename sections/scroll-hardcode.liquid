<script>
  document.addEventListener('DOMContentLoaded', function() {
    ScrollOut({
      cssProps: {
        visibleY: true,
        viewportY: true,
        scrollPercentY: true
      },
      threshold: 0.2
    });
  });
</script>


  <div class="scrollHalf">
    {% for block in section.blocks %}
    <div class="scrollHalf__group" data-scroll>
      <div class="scrollHalf__group__image">
        <div class="img-container">
          <img width="500" height="661" loading="eager" src="{{ block.settings.image | img_url: 'master' }}" />
        </div>
      </div>
      <div class="scrollHalf__group__content">
        <h1 class="title-scroll">{{ block.settings.title }}</h1>
        <p class="para-scroll">{{ block.settings.text }}</p>
      </div>
    </div>
    {% endfor %}
  </div>



{% schema %}
{
  "name": "Scrolling Image Section",
  "presets": [
    {
      "name": "Scrolling Image Section",
      "category": "Custom"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Your text here"
        }
      ]
    }
  ]
}
{% endschema %}


