      "default": "Enter your main heading here"
    },
        {
      "type": "text",
      "id": "custom_header_2",
      "label": "Column Header 1",
      "default": "Enter your column heading here"
    },
        {
      "type": "text",
      "id": "custom_header_3",
      "label": "Column Header 2",
      "default": "Enter your column heading here"
    },
        {
      "type": "text",
      "id": "custom_header_4",
      "label": "Column Header 3",
      "default": "Enter your column heading here"
    },
    {
      "type": "text",
      "id": "custom_para_1",
      "label": "Paragraph Text 1",
      "default": "Enter your text for the first column here"
    },
    {
      "type": "text",
      "id": "custom_para_2",
      "label": "Paragraph Text 2",
      "default": "Enter your text for the second column here"
    },
    {
      "type": "text",
