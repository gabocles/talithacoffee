<link rel="stylesheet" href="{{ 'adev-customer-global.min.css' | asset_url }}" media="all">
{%- assign get = section.settings -%}
{% style %}
    .adev-account#section_{{ section.id }} {
        padding-top: {{ get.spacing_top_mobile }}px;
        padding-bottom: {{ get.spacing_bottom_mobile }}px;
    }
    @media (min-width:992px) {
        .adev-account#section_{{ section.id }} {
            padding-top: {{ get.spacing_top_desktop }}px;
            padding-bottom: {{ get.spacing_bottom_desktop }}px;
        }
    }
{% endstyle %}

<div class="adev-account adev-customer-logged" id="section_{{ section.id }}">
    <div class="adev-cl__inner">

        <div class="adev-cl__header">
          {%- if template.suffix == 'orders' -%}
          <h1>My Order History</h1>
          {%- else -%}
          <h1>{{ 'customer.account.title' | t }}</h1>
          {%- endif -%}
        </div>

        <div class="adev-cl__main">

            <div class="adev-cl__contents">

                <div class="adev-cl__orders-card">
                    
                    <div class="adev-cl__title"><h2>Individual Order History</h2></div>

                    {%- assign limit = 2 -%}
                    {%- if template.suffix == 'orders' -%}
                    {%- assign limit = 200 -%}
                    {%- endif -%}

                    {% if customer.orders_count > 0 %}
                    {%- paginate customer.orders by limit -%}
            
                    <div class="adev-cl__orders">
                      
                      <table>
                        <thead>
                          <tr>
                            <th scope="col">{{ 'customer.orders.order_number' | t }}</th>
                            <th scope="col">{{ 'customer.orders.date' | t }}</th>
                            <th scope="col">{{ 'customer.orders.payment_status' | t }}</th>
                            <th scope="col">{{ 'customer.orders.fulfillment_status' | t }}</th>
                            <th scope="col">{{ 'customer.orders.total' | t }}</th>
                          </tr>
                        </thead>
                        <tbody>
                          {% for order in customer.orders %}
                            <tr>
                              <td data-label="{{ 'customer.orders.order_number' | t }}"><span class="underline">{{ order.name | link_to: order.customer_url }}</span></td>
                              <td data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | date: format: 'month_day_year' }}</td>
                              <td data-label="{{ 'customer.orders.payment_status' | t }}">
                                <span class="adev-status-label" data-status="{{ order.financial_status_label | escape | handle }}">{{ order.financial_status_label }}</span>
                              </td>
                              <td data-label="{{ 'customer.orders.fulfillment_status' | t }}">
                                <span class="adev-status-label" data-status="{{ order.fulfillment_status_label | escape | handle }}">{{ order.fulfillment_status_label }}</span>
                              </td>
                              <td data-label="{{ 'customer.orders.total' | t }}">{{ order.total_price | money }}</td>
                            </tr>
                          {% endfor %}
                        </tbody>
                      </table>

                    </div>

                    {% if customer.orders_count > 2 and template.suffix != 'orders' %}
                    <div class="adev-cl__orders-pagination">
                        <a class="adev-btn" href="{{ routes.account_url }}?view=orders">View All Orders</a>
                    </div>
                    {% endif %}

                    {%- endpaginate -%}
                    {% else %}
                    <div class="adev-cl__empty">
                        <p>{{ 'customer.orders.none' | t }}</p>
                    </div>
                    {% endif %}

                </div>

              {% render 'subsctiption-list-on-shopify' %}
            </div>

            <div class="adev-cl__sidebar">

                <nav class="adev-cl__nav">
                    {%- render 'adev-account-nav' -%}
                </nav>

            </div>

        </div>

    </div>
</div>



{%- comment -%}
{% style %}

/* inset-pad  */
.account-section {
  max-width: calc(100% - 60px);
  margin: 0 auto;
}
/* inset-pad media */
@media (max-width: 989px) {
    .account-section {
        max-width: calc(100% - 26px);
    }
  }
/* inset-pad ^ */

  .account-section {
    background-color: #F4F4F4;
  }

  .account-section h1 {
    font-family: "termina", sans-serif !important;
    font-size: 34px;
  }

  .order-history-section {
    background-color: white;
    padding: 20px;
  }

  .order-history-section h2{
    font-family: "termina", sans-serif !important;
    font-size: 18px;
    padding-bottom: 14px;
  }

  .order-history-section tr {
    background-color: #F4F4F4;
    padding: 20px;
    text-align: left;
  }

  .order-history table{
      font-family: 'Calibre' !important;
  }

{% endstyle %}




<div class="account-section section-content py-section-vertical-spacing px-section max-w-site" data-color-scheme="primary">
  <div class="mb-10 lg:flex lg:items-center lg:justify-between">
    <h1 class="font-heading heading-feature mb-2.5">{{ 'customer.account.title' | t }}</h1>
    <div class="text-sm">
      {% if customer.first_name != blank %}
        {% capture first_name %}<a class="" href="{{ routes.account_url }}">{{ customer.first_name }}</a>{% endcapture %}
        {{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }}
      {% else %}
        <a class="" href="{{ routes.account_url }}">{{ 'layout.customer.account' | t }}</a>
      {% endif %} </div>
    <div class="mt-5">  
    <a button type="button" class="custom-btn w-full theme-button" href="{{ routes.account_logout_url }}">{{ 'layout.customer.log_out' | t }}</a>
      </div>
  </div>

  <div class="order-history-section lg:grid grid-cols-1 lg:grid-cols-12 max-w-screen">
    <div class="lg:col-span-8">
      <h2 class="font-heading heading-secondary mb-2.5">{{ 'customer.orders.title' | t }}</h2>

      {% paginate customer.orders by 20 %}
        {% if customer.orders.size != 0 %}
          <table class="responsive-table text-sm lg:text-base">
            <thead class="text-sm">
              <tr>
                <th scope="col">{{ 'customer.orders.order_number' | t }}</th>
                <th scope="col">{{ 'customer.orders.date' | t }}</th>
                <th scope="col">{{ 'customer.orders.payment_status' | t }}</th>
                <th scope="col">{{ 'customer.orders.fulfillment_status' | t }}</th>
                <th scope="col">{{ 'customer.orders.total' | t }}</th>
              </tr>
            </thead>
            <tbody>
              {% for order in customer.orders %}
                <tr class="responsive-table-row lg:border-none">
                  <td class="text-primary-accent-1" data-label="{{ 'customer.orders.order_number' | t }}"><span class="underline">{{ order.name | link_to: order.customer_url }}</span></td>
                  <td data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | date: format: 'month_day_year' }}</td>
                  <td data-label="{{ 'customer.orders.payment_status' | t }}">{{ order.financial_status_label }}</td>
                  <td data-label="{{ 'customer.orders.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                  <td data-label="{{ 'customer.orders.total' | t }}">{{ order.total_price | money }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        {% else %}
          <p>{{ 'customer.orders.none' | t }}</p>
        {% endif %}

        {% if paginate.pages > 1 %}
          {% render 'pagination' with paginate, section_color: 'primary' %}
        {% endif %}

      {% endpaginate %}
    </div>

 <div class="mt-8 lg:mt-0 lg:col-span-3 lg:col-start-10 mb-2">
      <div class="card-container">
        <div class="card p-5 relative z-shape-divider">
          <h2 class="font-heading heading-secondary mb-2.5">{{ 'customer.account.details' | t }}</h2>
          <div class="mb-4">{{ customer.default_address | format_address }}</div>
          {%- capture address_link -%}{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }}){%- endcapture -%}
          <a class="inline-block push-btn w-full theme-button" href="{{ routes.account_addresses_url }}">
            <span class="push-btn-surface w-full">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</span>
          </a>
          <br>
          <div class="custom-btn-green">
            <a href="https://talitha.com/tools/recurring/get-subscription-access" target="_blank">
              <button type="button" class=".custom-btn-green">
                Manage Subscription
              </button>
            </a>
          </div>
        </div>
        <div class="card-border"></div>
      </div>
    </div>
  </div>
</div>
{%- endcomment -%}


